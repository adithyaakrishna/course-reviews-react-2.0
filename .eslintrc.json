{
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "meteor": true
  },
  "plugins": ["react", "meteor"],
  "extends": ["eslint:recommended", "plugin:react/recommended", "plugin:meteor/recommended"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2019,
    "sourceType": "module"
  },
  "rules": {
    "meteor/no-session": "warn"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
